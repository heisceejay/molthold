# =============================================================================
# Agentic Wallet — Environment Configuration
# Copy this file to .env and fill in your values.
# NEVER commit .env to version control.
# =============================================================================

# ── Solana Network ────────────────────────────────────────────────────────────
# RPC endpoint. Use a dedicated RPC provider (Helius, QuickNode) for stability.
# Default: public devnet (rate-limited, fine for development)
SOLANA_RPC_URL=https://api.devnet.solana.com

# Network guard: only 'devnet' and 'testnet' are accepted.
# The system will refuse to start if this is set to mainnet-beta.
SOLANA_NETWORK=devnet

# ── Key Management ────────────────────────────────────────────────────────────
# Password used to decrypt keystore files at startup.
# Must be >= 8 characters. Set this in your process manager or secrets manager.
# If omitted, you must pass --password on the CLI for each wallet command.
WALLET_PASSWORD=

# DEV/CI ONLY: Load a keypair directly from a base58 secret key string.
# This bypasses the keystore entirely. NEVER set this in production.
# Disabled automatically when NODE_ENV=production.
WALLET_SECRET_KEY=

# ── Spending Limits ───────────────────────────────────────────────────────────
# Maximum SOL per single transaction (enforced before signing).
MAX_PER_TX_SOL=0.1

# Maximum cumulative SOL spend per agent session (resets on process restart).
MAX_SESSION_SOL=1.0

# ── Logging ───────────────────────────────────────────────────────────────────
# Log level: trace | debug | info | warn | error
LOG_LEVEL=info

# Path to the SQLite audit database.
AUDIT_DB_PATH=./logs/audit.db

# ── Agent Configuration ───────────────────────────────────────────────────────
# Path to the multi-agent config file (for `npx tsx src/cli/index.ts agent start --config`)
AGENTS_CONFIG_PATH=./agents.json

# Default interval between agent ticks in milliseconds
AGENT_INTERVAL_MS=30000

# ── Environment ───────────────────────────────────────────────────────────────
# Set to 'production' to enable mainnet block and disable WALLET_SECRET_KEY.
NODE_ENV=development
